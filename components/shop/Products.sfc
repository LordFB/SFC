<template>
    <div class="shop-layout">
        <shop-nav></shop-nav>
        <main class="products-page">
            <div class="products-header">
                <h1>Products</h1>
                <div class="filters">
                    <select id="category-filter" class="filter-select">
                        <option value="">All Categories</option>
                    </select>
                    <input type="search" id="search-input" placeholder="Search products..." class="search-input" />
                </div>
            </div>

            <div class="products-grid" id="products-grid">
                <div class="loading">Loading products...</div>
            </div>
        </main>
    </div>
</template>

<script lang="ts">
    export default class extends HTMLElement {
        static tag = "shop-products";

        products = [];
        filteredProducts = [];
        categories = [];
        searchTimeout = null;

        connectedCallback() {
            // Defer to next microtask to ensure template is attached
            Promise.resolve().then(() => {
                this.loadProducts();
                this.setupEventListeners();
            });
        }

        setupEventListeners() {
            // Category filter change
            const categoryFilter = this.querySelector('#category-filter');
            categoryFilter?.addEventListener('change', () => this.filterProducts());

            // Search input with debounce
            const searchInput = this.querySelector('#search-input');
            searchInput?.addEventListener('input', () => {
                if (this.searchTimeout) clearTimeout(this.searchTimeout);
                this.searchTimeout = setTimeout(() => this.filterProducts(), 300);
            });

            // Add to cart buttons (delegated)
            this.addEventListener('click', (e) => {
                const btn = (e.target as HTMLElement).closest('.add-to-cart-btn');
                if (btn) this.addToCart(btn as HTMLButtonElement);
            });
        }

        async loadProducts() {
            try {
                const res = await fetch('/shop/api/products', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ action: 'list' })
                });
                const data = await res.json();
                this.products = data.products || [];
                this.categories = data.categories || [];
                this.filteredProducts = [...this.products];

                this.renderCategories();
                this.renderProducts();

                // Check URL for category filter
                const urlParams = new URLSearchParams(window.location.search);
                const category = urlParams.get('category');
                if (category) {
                    const select = this.querySelector('#category-filter') as HTMLSelectElement;
                    if (select) {
                        select.value = category;
                        this.filterProducts();
                    }
                }
            } catch (err) {
                console.error('[shop-products] Failed to load products:', err);
                this.querySelector('#products-grid').innerHTML = '<div class="error">Failed to load products</div>';
            }
        }

        filterProducts() {
            const categoryFilter = this.querySelector('#category-filter') as HTMLSelectElement;
            const searchInput = this.querySelector('#search-input') as HTMLInputElement;

            const category = categoryFilter?.value || '';
            const search = searchInput?.value?.toLowerCase() || '';

            this.filteredProducts = this.products.filter(p => {
                const matchCategory = !category || p.category === category;
                const matchSearch = !search ||
                    p.name.toLowerCase().includes(search) ||
                    p.description.toLowerCase().includes(search);
                return matchCategory && matchSearch;
            });

            this.renderProducts();
        }

        renderCategories() {
            const select = this.querySelector('#category-filter');
            if (!select) return;

            const options = this.categories.map(cat =>
                `<option value="${cat}">${cat}</option>`
            ).join('');

            select.innerHTML = '<option value="">All Categories</option>' + options;
        }

        renderProducts() {
            const grid = this.querySelector('#products-grid');
            if (!grid) return;

            if (this.filteredProducts.length === 0) {
                grid.innerHTML = '<div class="no-products">No products found</div>';
                return;
            }

            grid.innerHTML = this.filteredProducts.map(p => `
      <div class="product-card" data-id="${p.id}">
        <a href="/shop/product/${p.id}" class="product-link">
          <div class="product-image">
            <img src="${p.image}" alt="${p.name}" loading="lazy" />
          </div>
          <div class="product-info">
            <span class="product-category">${p.category}</span>
            <h3 class="product-name">${p.name}</h3>
            <p class="product-price">$${p.price.toFixed(2)}</p>
          </div>
        </a>
        <button class="add-to-cart-btn" data-id="${p.id}">Add to Cart</button>
      </div>
    `).join('');
        }

        async addToCart(btn) {
            const productId = parseInt(btn.dataset.id);

            btn.disabled = true;
            btn.textContent = 'Adding...';

            try {
                const sessionId = this.getSessionId();
                const res = await fetch('/shop/api/cart', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ action: 'add', sessionId, productId, quantity: 1 })
                });

                const data = await res.json();

                if (data.error) {
                    alert(data.error);
                } else {
                    btn.textContent = 'âœ“ Added!';
                    window.dispatchEvent(new CustomEvent('cart-updated'));
                    setTimeout(() => {
                        btn.textContent = 'Add to Cart';
                        btn.disabled = false;
                    }, 1500);
                    return;
                }
            } catch (err) {
                console.error('[shop-products] Failed to add to cart:', err);
                alert('Failed to add to cart');
            }

            btn.textContent = 'Add to Cart';
            btn.disabled = false;
        }

        getSessionId() {
            let sessionId = localStorage.getItem('shop_session');
            if (!sessionId) {
                sessionId = 'sess_' + Math.random().toString(36).substr(2, 9) + Date.now();
                localStorage.setItem('shop_session', sessionId);
            }
            return sessionId;
        }
    }
</script>

