<template>
  <nav class="shop-nav">
    <div class="nav-container">
      <a href="/shop" class="logo">
        <span class="logo-icon">ðŸ›’</span>
        <span class="logo-text">SFC Shop</span>
      </a>
      
      <div class="nav-links">
        <a href="/shop" class="nav-link">Home</a>
        <a href="/shop/products" class="nav-link">Products</a>
        <a href="/shop/orders" class="nav-link">My Orders</a>
      </div>
      
      <a href="/shop/cart" class="cart-link">
        <span class="cart-icon">ðŸ›’</span>
        <span class="cart-count" id="cart-count">0</span>
      </a>
    </div>
  </nav>
</template>

<script lang="ts">
export default class extends HTMLElement {
  static tag = "shop-nav";
  
  connectedCallback() {
    // Defer to next microtask to ensure template is attached
    Promise.resolve().then(() => {
      this.loadCartCount();
    });
    
    // Listen for cart updates
    window.addEventListener('cart-updated', () => this.loadCartCount());
  }
  
  async loadCartCount() {
    try {
      const sessionId = this.getSessionId();
      const res = await fetch('/shop/api/cart', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ action: 'get', sessionId })
      });
      const data = await res.json();
      const countEl = this.querySelector('#cart-count');
      if (countEl && data.item_count !== undefined) {
        countEl.textContent = data.item_count;
        countEl.classList.toggle('has-items', data.item_count > 0);
      }
    } catch (err) {
      console.error('[shop-nav] Failed to load cart count:', err);
    }
  }
  
  getSessionId() {
    let sessionId = localStorage.getItem('shop_session');
    if (!sessionId) {
      sessionId = 'sess_' + Math.random().toString(36).substr(2, 9) + Date.now();
      localStorage.setItem('shop_session', sessionId);
    }
    return sessionId;
  }
}
</script>

