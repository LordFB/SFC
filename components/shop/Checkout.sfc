<template>
  <div class="shop-layout">
    <shop-nav></shop-nav>
    <main class="checkout-page">
      <h1>Checkout</h1>
      
      <div class="checkout-content" id="checkout-content">
        <div class="loading">Loading...</div>
      </div>
    </main>
  </div>
</template>

<script lang="ts">
export default class extends HTMLElement {
  static tag = "shop-checkout";
  
  cart = { items: [], total: 0, item_count: 0 };
  
  connectedCallback() {
    // Defer to next microtask to ensure template is attached
    Promise.resolve().then(() => {
      this.loadCart();
      this.setupEventListeners();
    });
  }
  
  setupEventListeners() {
    this.addEventListener('submit', (e) => {
      const form = (e.target as HTMLElement);
      if (form.id === 'checkout-form') {
        e.preventDefault();
        this.handleSubmit(form);
      }
    });
  }
  
  async loadCart() {
    try {
      const sessionId = this.getSessionId();
      const res = await fetch('/shop/api/cart', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ action: 'get', sessionId })
      });
      this.cart = await res.json();
      this.render();
    } catch (err) {
      console.error('[shop-checkout] Failed to load cart:', err);
    }
  }
  
  render() {
    const content = this.querySelector('#checkout-content');
    
    if (this.cart.items.length === 0) {
      content.innerHTML = `
        <div class="empty-cart">
          <h2>Your cart is empty</h2>
          <p>Add some products before checking out.</p>
          <a href="/shop/products" class="btn btn-primary">Browse Products</a>
        </div>
      `;
      return;
    }
    
    const shipping = this.cart.total >= 50 ? 0 : 5.99;
    const orderTotal = this.cart.total + shipping;
    
    content.innerHTML = `
      <div class="checkout-layout">
        <div class="checkout-form">
          <h2>Shipping Information</h2>
          <form id="checkout-form">
            <div class="form-row">
              <div class="form-group">
                <label for="name">Full Name *</label>
                <input type="text" id="name" name="name" required placeholder="John Doe" />
              </div>
              <div class="form-group">
                <label for="email">Email Address *</label>
                <input type="email" id="email" name="email" required placeholder="john@example.com" />
              </div>
            </div>
            
            <div class="form-group">
              <label for="address">Shipping Address *</label>
              <textarea id="address" name="address" required placeholder="123 Main St, City, Country 12345" rows="3"></textarea>
            </div>
            
            <h2>Payment Information</h2>
            <div class="payment-demo">
              <p>ðŸ’³ This is a demo store - no real payment required!</p>
            </div>
            
            <div class="form-row">
              <div class="form-group">
                <label for="card">Card Number</label>
                <input type="text" id="card" placeholder="4242 4242 4242 4242" />
              </div>
            </div>
            <div class="form-row">
              <div class="form-group">
                <label for="expiry">Expiry</label>
                <input type="text" id="expiry" placeholder="MM/YY" />
              </div>
              <div class="form-group">
                <label for="cvv">CVV</label>
                <input type="text" id="cvv" placeholder="123" />
              </div>
            </div>
            
            <button type="submit" class="btn btn-primary submit-btn" id="submit-btn">
              Place Order - $${orderTotal.toFixed(2)}
            </button>
          </form>
        </div>
        
        <div class="order-summary">
          <h2>Order Summary</h2>
          <div class="order-items">
            ${this.cart.items.map(item => `
              <div class="order-item">
                <img src="${item.image}" alt="${item.name}" />
                <div class="order-item-info">
                  <span class="order-item-name">${item.name}</span>
                  <span class="order-item-qty">Qty: ${item.quantity}</span>
                </div>
                <span class="order-item-price">$${item.subtotal.toFixed(2)}</span>
              </div>
            `).join('')}
          </div>
          <div class="summary-divider"></div>
          <div class="summary-row">
            <span>Subtotal</span>
            <span>$${this.cart.total.toFixed(2)}</span>
          </div>
          <div class="summary-row">
            <span>Shipping</span>
            <span>${shipping === 0 ? 'Free' : '$' + shipping.toFixed(2)}</span>
          </div>
          <div class="summary-divider"></div>
          <div class="summary-row total">
            <span>Total</span>
            <span>$${orderTotal.toFixed(2)}</span>
          </div>
        </div>
      </div>
    `;
  }
  
  async handleSubmit(form) {
    const name = form.querySelector('#name').value.trim();
    const email = form.querySelector('#email').value.trim();
    const address = form.querySelector('#address').value.trim();
    
    if (!name || !email || !address) {
      alert('Please fill in all required fields');
      return;
    }
    
    const submitBtn = this.querySelector('#submit-btn');
    submitBtn.disabled = true;
    submitBtn.textContent = 'Processing...';
    
    try {
      const sessionId = this.getSessionId();
      const res = await fetch('/shop/api/orders', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          action: 'create',
          sessionId,
          customerInfo: { name, email, address }
        })
      });
      
      const data = await res.json();
      
      if (data.error) {
        alert(data.error);
        submitBtn.disabled = false;
        submitBtn.textContent = 'Place Order';
      } else {
        // Order success - redirect to confirmation
        window.dispatchEvent(new CustomEvent('cart-updated'));
        window.location.href = `/shop/order/${data.order.id}`;
      }
    } catch (err) {
      console.error('[shop-checkout] Failed to create order:', err);
      alert('Failed to place order. Please try again.');
      submitBtn.disabled = false;
      submitBtn.textContent = 'Place Order';
    }
  }
  
  getSessionId() {
    let sessionId = localStorage.getItem('shop_session');
    if (!sessionId) {
      sessionId = 'sess_' + Math.random().toString(36).substr(2, 9) + Date.now();
      localStorage.setItem('shop_session', sessionId);
    }
    return sessionId;
  }
}
</script>

