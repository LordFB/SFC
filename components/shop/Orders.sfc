<template>
    <div class="shop-layout">
        <shop-nav></shop-nav>
        <main class="orders-page">
            <h1>My Orders</h1>

            <div class="orders-list" id="orders-list">
                <div class="loading">Loading orders...</div>
            </div>
        </main>
    </div>
</template>

<script lang="ts">
    export default class extends HTMLElement {
        static tag = "shop-orders";

        orders = [];

        connectedCallback() {
            // Defer to next microtask to ensure template is attached
            Promise.resolve().then(() => {
                this.loadOrders();
            });
        }

        async loadOrders() {
            try {
                const sessionId = this.getSessionId();
                const res = await fetch('/shop/api/orders', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ action: 'list', sessionId })
                });
                const data = await res.json();
                this.orders = data.orders || [];
                this.render();
            } catch (err) {
                console.error('[shop-orders] Failed to load orders:', err);
                this.querySelector('#orders-list').innerHTML = '<div class="error">Failed to load orders</div>';
            }
        }

        render() {
            const container = this.querySelector('#orders-list');

            if (this.orders.length === 0) {
                container.innerHTML = `
        <div class="empty-orders">
          <div class="empty-icon">ðŸ“¦</div>
          <h2>No orders yet</h2>
          <p>When you place orders, they'll appear here.</p>
          <a href="/shop/products" class="btn btn-primary">Start Shopping</a>
        </div>
      `;
                return;
            }

            container.innerHTML = this.orders.map(order => `
      <a href="/shop/order/${order.id}" class="order-card">
        <div class="order-header">
          <span class="order-id">Order #${order.id}</span>
          <span class="status-badge status-${order.status}">${this.formatStatus(order.status)}</span>
        </div>
        <div class="order-info">
          <div class="info-item">
            <span class="label">Date</span>
            <span class="value">${this.formatDate(order.created_at)}</span>
          </div>
          <div class="info-item">
            <span class="label">Total</span>
            <span class="value price">$${order.total.toFixed(2)}</span>
          </div>
          <div class="info-item">
            <span class="label">Ship To</span>
            <span class="value">${order.customer_name}</span>
          </div>
        </div>
        <div class="order-action">
          View Details â†’
        </div>
      </a>
    `).join('');
        }

        formatStatus(status) {
            return status.charAt(0).toUpperCase() + status.slice(1);
        }

        formatDate(dateStr) {
            return new Date(dateStr).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'short',
                day: 'numeric'
            });
        }

        getSessionId() {
            let sessionId = localStorage.getItem('shop_session');
            if (!sessionId) {
                sessionId = 'sess_' + Math.random().toString(36).substr(2, 9) + Date.now();
                localStorage.setItem('shop_session', sessionId);
            }
            return sessionId;
        }
    }
</script>

