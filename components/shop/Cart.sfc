<template>
  <div class="shop-layout">
    <shop-nav></shop-nav>
    <main class="cart-page">
      <h1>Shopping Cart</h1>
      
      <div class="cart-content" id="cart-content">
        <div class="loading">Loading cart...</div>
      </div>
    </main>
  </div>
</template>

<script lang="ts">
export default class extends HTMLElement {
  static tag = "shop-cart";
  
  cart = { items: [], total: 0, item_count: 0 };
  
  connectedCallback() {
    // Defer to next microtask to ensure template is attached
    Promise.resolve().then(() => {
      this.loadCart();
      this.setupEventListeners();
    });
  }
  
  setupEventListeners() {
    this.addEventListener('click', (e) => {
      const target = e.target as HTMLElement;
      const productId = parseInt(target.dataset?.id);
      
      if (target.classList.contains('qty-minus') && productId) {
        const item = this.cart.items.find(i => i.product_id === productId);
        if (item) this.updateQuantity(productId, item.quantity - 1);
      } else if (target.classList.contains('qty-plus') && productId) {
        const item = this.cart.items.find(i => i.product_id === productId);
        if (item) this.updateQuantity(productId, item.quantity + 1);
      } else if (target.classList.contains('remove-btn') && productId) {
        this.updateQuantity(productId, 0);
      }
    });
  }
  
  async loadCart() {
    try {
      const sessionId = this.getSessionId();
      const res = await fetch('/shop/api/cart', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ action: 'get', sessionId })
      });
      this.cart = await res.json();
      this.render();
    } catch (err) {
      console.error('[shop-cart] Failed to load cart:', err);
      this.querySelector('#cart-content').innerHTML = '<div class="error">Failed to load cart</div>';
    }
  }
  
  render() {
    const content = this.querySelector('#cart-content');
    
    if (this.cart.items.length === 0) {
      content.innerHTML = `
        <div class="empty-cart">
          <div class="empty-icon">ðŸ›’</div>
          <h2>Your cart is empty</h2>
          <p>Looks like you haven't added anything to your cart yet.</p>
          <a href="/shop/products" class="btn btn-primary">Browse Products</a>
        </div>
      `;
      return;
    }
    
    const itemsHtml = this.cart.items.map(item => `
      <div class="cart-item" data-id="${item.product_id}">
        <img src="${item.image}" alt="${item.name}" class="item-image" />
        <div class="item-details">
          <a href="/shop/product/${item.product_id}" class="item-name">${item.name}</a>
          <p class="item-price">$${item.price.toFixed(2)} each</p>
        </div>
        <div class="item-quantity">
          <button class="qty-btn qty-minus" data-id="${item.product_id}">âˆ’</button>
          <span class="qty-value">${item.quantity}</span>
          <button class="qty-btn qty-plus" data-id="${item.product_id}">+</button>
        </div>
        <div class="item-subtotal">$${item.subtotal.toFixed(2)}</div>
        <button class="remove-btn" data-id="${item.product_id}">Ã—</button>
      </div>
    `).join('');
    
    content.innerHTML = `
      <div class="cart-layout">
        <div class="cart-items">
          ${itemsHtml}
        </div>
        <div class="cart-summary">
          <h2>Order Summary</h2>
          <div class="summary-row">
            <span>Items (${this.cart.item_count})</span>
            <span>$${this.cart.total.toFixed(2)}</span>
          </div>
          <div class="summary-row">
            <span>Shipping</span>
            <span>${this.cart.total >= 50 ? 'Free' : '$5.99'}</span>
          </div>
          <div class="summary-divider"></div>
          <div class="summary-row total">
            <span>Total</span>
            <span>$${(this.cart.total + (this.cart.total >= 50 ? 0 : 5.99)).toFixed(2)}</span>
          </div>
          <a href="/shop/checkout" class="btn btn-primary checkout-btn">Proceed to Checkout</a>
          <a href="/shop/products" class="btn btn-secondary continue-btn">Continue Shopping</a>
        </div>
      </div>
    `;
  }
  
  async updateQuantity(productId, quantity) {
    try {
      const sessionId = this.getSessionId();
      const res = await fetch('/shop/api/cart', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ 
          action: quantity === 0 ? 'remove' : 'update', 
          sessionId, 
          productId, 
          quantity 
        })
      });
      this.cart = await res.json();
      this.render();
      window.dispatchEvent(new CustomEvent('cart-updated'));
    } catch (err) {
      console.error('[shop-cart] Failed to update cart:', err);
      alert('Failed to update cart');
    }
  }
  
  getSessionId() {
    let sessionId = localStorage.getItem('shop_session');
    if (!sessionId) {
      sessionId = 'sess_' + Math.random().toString(36).substr(2, 9) + Date.now();
      localStorage.setItem('shop_session', sessionId);
    }
    return sessionId;
  }
}
</script>

