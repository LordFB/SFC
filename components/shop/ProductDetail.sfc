<template>
    <h1></h1>
  <div class="shop-layout">
    <shop-nav></shop-nav>
    <main class="product-detail">
      <div class="loading" id="loading">Loading product...</div>
      
      <div class="product-container" id="product-container" style="display: none;">
        <div class="breadcrumb">
          <a href="/shop">Home</a> / 
          <a href="/shop/products">Products</a> / 
          <span id="product-breadcrumb"></span>
        </div>
        
        <div class="product-layout">
          <div class="product-gallery">
            <img id="product-image" src="" alt="" />
          </div>
          
          <div class="product-info">
            <span class="product-category" id="product-category"></span>
            <h1 id="product-name"></h1>
            <p class="product-price" id="product-price"></p>
            <p class="product-description" id="product-description"></p>
            
            <div class="stock-info" id="stock-info"></div>
            
