                <button class="qty-btn qty-minus">‚àí</button>
                <input type="number" id="quantity" value="1" min="1" max="99" />
                <button class="qty-btn qty-plus">+</button>
              </div>
            </div>
            
            <button class="add-to-cart-btn" id="add-to-cart">Add to Cart</button>
            
