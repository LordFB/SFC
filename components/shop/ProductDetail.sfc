<script lang="ts">
export default class extends HTMLElement {
  static tag = "shop-product-detail";
  
  product = null;
  quantity = 1;
  
  connectedCallback() {
    // Defer to next microtask to ensure template is attached
    Promise.resolve().then(() => {
      const productId = this.params?.id;
      if (productId) {
        this.loadProduct(productId);
      } else {
        this.showError();
      }
      this.setupEventListeners();
    });
  }
  
  setupEventListeners() {
    // Quantity controls
    this.addEventListener('click', (e) => {
      const target = e.target as HTMLElement;
      if (target.classList.contains('qty-minus')) {
        this.decreaseQty();
      } else if (target.classList.contains('qty-plus')) {
        this.increaseQty();
      } else if (target.id === 'add-to-cart') {
        this.addToCart(target as HTMLButtonElement);
      }
    });
    
    // Quantity input
    const qtyInput = this.querySelector('#quantity');
    qtyInput?.addEventListener('input', (e) => {
      this.quantity = Math.max(1, parseInt((e.target as HTMLInputElement).value) || 1);
    });
  }
  
  async loadProduct(id) {
    try {
      const res = await fetch('/shop/api/products', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ action: 'get', id: parseInt(id) })
      });
      const data = await res.json();
      
      if (data.product) {
        this.product = data.product;
        this.renderProduct();
      } else {
        this.showError();
      }
    } catch (err) {
      console.error('[shop-product] Failed to load product:', err);
      this.showError();
    }
  }
  
  renderProduct() {
    const p = this.product;
    
    this.querySelector('#loading').style.display = 'none';
    this.querySelector('#product-container').style.display = 'block';
    
    this.querySelector('#product-image').src = p.image;
    this.querySelector('#product-image').alt = p.name;
    this.querySelector('#product-name').textContent = p.name;
    this.querySelector('#product-category').textContent = p.category;
    this.querySelector('#product-price').textContent = `$${p.price.toFixed(2)}`;
    this.querySelector('#product-description').textContent = p.description;
    this.querySelector('#product-breadcrumb').textContent = p.name;
    
    const stockInfo = this.querySelector('#stock-info');
    if (p.stock > 10) {
      stockInfo.innerHTML = '<span class="in-stock">‚úì In Stock</span>';
    } else if (p.stock > 0) {
      stockInfo.innerHTML = `<span class="low-stock">Only ${p.stock} left!</span>`;
    } else {
      stockInfo.innerHTML = '<span class="out-of-stock">Out of Stock</span>';
      this.querySelector('#add-to-cart').disabled = true;
    }
    
    // Update max quantity
    this.querySelector('#quantity').max = p.stock;
  }
  
  showError() {
    this.querySelector('#loading').style.display = 'none';
    this.querySelector('#error-container').style.display = 'block';
  }
  
  decreaseQty() {
    const input = this.querySelector('#quantity') as HTMLInputElement;
    const newVal = Math.max(1, parseInt(input.value) - 1);
    input.value = newVal.toString();
    this.quantity = newVal;
  }
  
  increaseQty() {
    const input = this.querySelector('#quantity') as HTMLInputElement;
    const max = parseInt(input.max) || 99;
    const newVal = Math.min(max, parseInt(input.value) + 1);
    input.value = newVal.toString();
    this.quantity = newVal;
  }
  
  async addToCart(btn) {
    if (!this.product) return;
    
    btn.disabled = true;
    btn.textContent = 'Adding...';
    
    try {
      const sessionId = this.getSessionId();
      const res = await fetch('/shop/api/cart', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ 
          action: 'add', 
          sessionId, 
          productId: this.product.id, 
          quantity: this.quantity 
        })
      });
      
      const data = await res.json();
      
      if (data.error) {
        alert(data.error);
        btn.textContent = 'Add to Cart';
        btn.disabled = false;
      } else {
        btn.textContent = '‚úì Added to Cart!';
        window.dispatchEvent(new CustomEvent('cart-updated'));
        setTimeout(() => {
          btn.textContent = 'Add to Cart';
          btn.disabled = false;
        }, 2000);
      }
    } catch (err) {
      console.error('[shop-product] Failed to add to cart:', err);
      alert('Failed to add to cart');
      btn.textContent = 'Add to Cart';
      btn.disabled = false;
    }
  }
  
  getSessionId() {
    let sessionId = localStorage.getItem('shop_session');
    if (!sessionId) {
      sessionId = 'sess_' + Math.random().toString(36).substr(2, 9) + Date.now();
      localStorage.setItem('shop_session', sessionId);
    }
    return sessionId;
  }
}
</script>

